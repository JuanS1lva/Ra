{
  "info": {
    "name": "RBAC API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección de endpoints RBAC con ejemplos de cURL listos para importar en Postman. Usa la variable {{baseUrl}} y envía el header x-tenant-id."
  },
  "item": [
    {
      "name": "Listar permisos",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-tenant-id",
            "value": "{{tenantId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/permissions",
          "host": ["{{baseUrl}}"],
          "path": ["permissions"]
        },
        "description": "curl --location --request GET '{{baseUrl}}/permissions' \\\n--header 'x-tenant-id: {{tenantId}}'"
      }
    },
    {
      "name": "Crear rol",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-tenant-id",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admin\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/roles",
          "host": ["{{baseUrl}}"],
          "path": ["roles"]
        },
        "description": "curl --location --request POST '{{baseUrl}}/roles' \\\n--header 'Content-Type: application/json' \\\n--header 'x-tenant-id: {{tenantId}}' \\\n--data-raw '{\n  \"name\": \"Admin\"\n}'"
      }
    },
    {
      "name": "Listar roles",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-tenant-id",
            "value": "{{tenantId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/roles",
          "host": ["{{baseUrl}}"],
          "path": ["roles"]
        },
        "description": "curl --location --request GET '{{baseUrl}}/roles' \\\n--header 'x-tenant-id: {{tenantId}}'"
      }
    },
    {
      "name": "Asignar permisos a rol",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-tenant-id",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"permissionCodes\": [\n    \"TENANT_READ\",\n    \"ROLE_ASSIGN\"\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/roles/{{roleId}}/permissions",
          "host": ["{{baseUrl}}"],
          "path": ["roles", "{{roleId}}", "permissions"]
        },
        "description": "curl --location --request POST '{{baseUrl}}/roles/{{roleId}}/permissions' \\\n--header 'Content-Type: application/json' \\\n--header 'x-tenant-id: {{tenantId}}' \\\n--data-raw '{\n  \"permissionCodes\": [\n    \"TENANT_READ\",\n    \"ROLE_ASSIGN\"\n  ]\n}'"
      }
    },
    {
      "name": "Asignar roles a usuario",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-tenant-id",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"roleIds\": [\n    \"{{roleId}}\"\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/roles",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "roles"]
        },
        "description": "curl --location --request POST '{{baseUrl}}/users/{{userId}}/roles' \\\n--header 'Content-Type: application/json' \\\n--header 'x-tenant-id: {{tenantId}}' \\\n--data-raw '{\n  \"roleIds\": [\n    \"{{roleId}}\"\n  ]\n}'"
      }
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "tenantId",
      "value": "tenant-demo"
    },
    {
      "key": "roleId",
      "value": "replace-with-role-id"
    },
    {
      "key": "userId",
      "value": "replace-with-user-id"
    }
  ]
}
